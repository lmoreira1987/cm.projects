@using Microsoft.AspNet.Identity
@model Presentation.Models.ManageUserViewModel

<p>Você está logado como <strong>@User.Identity.GetUserName()</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Modifique sua senha</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-2">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", maxlength = 15 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-2">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", maxlength = 15 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-2">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = 15 })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Mudar senha" class="btn btn-default" />
        </div>
    </div>
}
