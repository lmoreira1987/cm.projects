@model List<Delu.Delicia.MVC.Models.ProductsModels>

@Html.Partial("Menu")

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/content/images/products.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="row row-mt-15em">
                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Nossos deliciosos produtos</span>
                        <h1 class="cursive-font">@ViewBag.Produtos</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="gtco-section" id="produtos">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2 class="cursive-font primary-color">Produtos</h2>
                <p>Principais produtos da categoria: <b>@ViewBag.Produtos</b>.</p>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="fh5co-card-item">
                        <figure>
                            <div class="overlay"></div>
                            <img src="@item.Img" alt="@item.Title" class="img-responsive">
                        </figure>
                        <div class="fh5co-text">
                            <h2>@item.Title</h2>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }

